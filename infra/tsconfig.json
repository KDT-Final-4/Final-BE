{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "types": ["node"],
  "include": ["scripts/**/*.ts", "lib/**/*.ts", "types/**/*.d.ts"]
}

