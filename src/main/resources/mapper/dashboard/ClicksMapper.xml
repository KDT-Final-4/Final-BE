<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.final_team4.finalbe.dashboard.mapper.ClicksMapper">

    <!-- 상품별 클릭 수 -->
    <select id="countClicksByProductId"
            parameterType="long"
            resultType="long">
        SELECT COUNT(*)
        FROM CLICKS
        WHERE PRODUCT_ID = #{productId}
    </select>

    <!-- CLICKS 전체 클릭 수 -->
    <select id="countAllClicks"
            resultType="long">
        SELECT COUNT(*)
        FROM CLICKS
    </select>

</mapper>