<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
  <property name="LOG_DIR" value="${LOG_DIR:-logs}"/>
  <property name="LOG_FILE" value="${LOG_FILE:-${LOG_DIR}/final-be.log}"/>
  <property name="APP_LOG_LEVEL" value="${APP_LOG_LEVEL:-INFO}"/>
  <property name="ROOT_LOG_LEVEL" value="${ROOT_LOG_LEVEL:-INFO}"/>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_FILE}</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/final-be-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>10MB</maxFileSize>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.final_team4.finalbe" level="${APP_LOG_LEVEL}"/>
  <logger name="org.mybatis" level="WARN"/>

  <root level="${ROOT_LOG_LEVEL}">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="ROLLING"/>
  </root>
</configuration>
